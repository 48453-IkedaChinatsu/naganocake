<div class="container">
   <h4>商品一覧 (全<%= @items.count %>件)</h4> 
       <div class="row">
        <% @items.each do |item| %>
         <div class='col-xs-3'>
           <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
           <%= image_tag item.get_image(100,100) %><br>
           <%= item.name %><br>
          ¥<%= item.price %>
			     <% end %>
			   </div>
		    <% end %>
       </div>
</div>


