<div class="container">
   <h3>注文情報入力</h3>
   <div class="panel-body">
         <%= form_with model: @orders, url:orders_confirm_path, method: :post,local: true do |f| %>
        
            
              <h4>支払い方法<h4>
             
               <%= f.radio_button :method, 0, checked: "checked" %>	 
               <%= f.label :クレジットカード %><br>
               <%= f.radio_button :method, 1 %>
	  		       <%= f.label :銀行振込 %>
	  		   
           
         
             <h4>お届け先</h4>
          
              <%= f.radio_button :address_number, 1 %> 
              <%= f.label :address_number_1, "ご自身の住所" %><br>
              <%= current_customer.postal_code + current_customer.address %><br>
              <%= current_customer.last_name %>
              <%= current_customer.first_name %><br>
        
         
             <%= f.radio_button :a_method, 1 %>
		     <%= f.label :登録済住所から選択 %><br>
			 <%= f.collection_select :address_for_order, @addresses, :id, :address %><br>

          
             <%= f.radio_button :a_method, 2 %>
			       <%= f.label :新しいお届け先 %><br>
			   <div class="form-group col-xs-12">
				     <%= f.label :"　　　郵便番号(ハイフンなし)", class: "col-xs-3 control-label"  %>
				     <%= f.text_field :post_code, class: "col-xs-4 form-control-static postal_code" %>
			   </div>
			   
			   <div class="form-group col-xs-12">
				     <%= f.label :"　　　住所", class: "col-xs-3 control-label" %>
				     <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
			   </div>
			   
			   <div class="form-group col-xs-12">
				     <%= f.label :"　　　宛名", class: "col-xs-3 control-label" %>
				     <%= f.text_field :name, class: "col-xs-4 form-control-static name"%>
			   </div>
       

   <%= f.submit "確認画面へ進む",class: 'btn btn-warning col-xs-6 col-xs-offset-1' %>
<% end %>

 </div> 
</div>