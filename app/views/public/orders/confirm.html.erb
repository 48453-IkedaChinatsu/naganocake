<div class="container">
<div class="row">
    <h3>注文情報確認</h3>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= image_tag cart_item.item.image, size: "60x50" %>
                <%= cart_item.item.name %>
              </td>
               <td class="text-right">
                ¥<%= ((cart_item.item.price * 1.1).floor).to_s(:delimited, delimiter: ',') %>
                
              </td>
              <td class="text-right">
                  <%= cart_item.quantity %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_item.item.price * 1.1).floor * cart_item.quantity).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
      <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">送料</th>
            <td class="text-right col-xs-5">
              <!-- sessiomのデータを表示する場合、カラム名に""つける -->
              ¥<%= session[:order]["shipping_cost"].to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              ¥<%= (session[:order]["total_payment"] - session[:order]["postage"]).to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
              ¥<%= session[:order]["total_payment"].to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
      </table>
    </div>
    
    
</div>
</div>
