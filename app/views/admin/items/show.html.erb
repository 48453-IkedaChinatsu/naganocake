<div class="container">
    
    <div class="row">
  <div class="col-xs-4">
      <h4>商品詳細</h4><br>
       <% if @item.image.attached? %>
       <%= image_tag @item.image, size: "300x300" %>
       <% else %>
       <%= image_tag 'no_image', size: "300x300" %>
       <% end %>
    
      <br><br><br><br>
      <div class="col-xs-8">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= @item.price %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @item.is_active == true %>
                 販売中
              <% else %>
                 販売停止中
              <% end %>
              </td>
               <td><%= link_to "編集する",  edit_admin_item_path(@item), class: "btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
        
      </div>
    </div>

</div>