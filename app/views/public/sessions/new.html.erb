<div class="container">
<h2>会員の方はこちらからログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0", class: 'fa' %>
  </div>

   <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
    <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password",  placeholder: "\uf023", class: 'fa' %>
   </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary col-lg-3" %>
  </div>
  
  <% end %>
<div class="row">
  <div class="col-xs-5">
    <h4>登録がお済でない方</h4>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "こちら" %>
      <strong>から新規登録を行ってください。</strong>
    <% end %>
  </div>
  <div class="col-xs-5">
    <h4>管理者の方</h4>
    <%= link_to "こちら" %>
    <strong>からログインしてください</strong>
  </div>
</div>

</div>