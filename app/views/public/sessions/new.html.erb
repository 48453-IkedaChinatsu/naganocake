<div class="container">
  <h4>ログイン</h4><br>
  <h5>会員の方はこちらからログイン</h5><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
  </div><br>

  <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password",  placeholder: "パスワード" %>
        </div>
  </div><br>
  
     
  <div class="row">
        <div class="col-lg-3"></div>
        <%= f.submit "ログイン",class:"d-block btn btn-primary col-lg-2" %>
  </div><br>
        <% end %>

  <div class="row">
  <div class="col-xs-5">
    <h5>登録がお済でない方</h5><br>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "こちら", new_customer_registration_path %>
      <strong>から新規登録を行ってください。</strong>
    <% end %>
  </div><br>
</div>
</div>