<div class="row">
	<div class="col-xs-2">
 <%= render "public/items/sidebar", genres: @genres %>
	</div>

 <div class="row">
  <div class="col-xs-4">
      <h4>商品詳細</h4><br>
       <% if @item.image.attached? %>
       <%= image_tag @item.image, size: "300x300" %>
       <% else %>
       <%= image_tag 'no_image', size: "300x300" %>
       <% end %>
    
      <br><br><br><br>
      <div class="col-xs-8">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= @item.price %>円</td>
            </tr>
          </tbody>
        </table>

      <div class="row">
       <div class="col-xs-2"></div>
       <div class="col-xs-5">
       <p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price_tax*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
       <span>　　</span><%= form.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
       </div>

      <div class="col-xs-5">
       <p><%= form.submit "カートに入れる", class:"btn btn-primary" %></p>
      </div>
       <% end %>
       </div>
     </div>
  </div>
 </div>
