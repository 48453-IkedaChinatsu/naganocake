<div class="container">
<h2>管理者ログイン</h2>

<%= form_with(model: @customer, url: new_admin_session_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス",  placeholder: "\uf0e0", class: 'fa' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "パスワード",  placeholder: "\uf023", class: 'fa' %>
  </div><br>


  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
</div>