<div class="container">
<div class="row">
	<div class="col-xs-2">
 <%= render "public/items/sidebar", genres: @genres %>
	</div>
	
  <div class="col-xs-4">
      <h4>商品詳細</h4><br>
       <% if @item.image.attached? %>
       <%= image_tag @item.image, size: "300x300" %>
       <% else %>
       <%= image_tag 'no_image', size: "300x300" %>
       <% end %>
　</div>
　
      <br><br><br><br>
      <div class="col-xs-６">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
          </tbody>
        </table>
       <p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price_was*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
    　　　<%= form_with model: @cart_item, url:cart_items_path(item_id: @item), method: :post do |f| %>
		　<h3><%= @item.name %></h3>
		　　<%= f.hidden_field :item_id, value: @item.id %>
       　　<%= f.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %>
       　　<%= f.submit "カートに入れる", class:"btn btn-primary" %>
       　　<% end %>
     　</p>
       </div>
       
      
  
 </div>
 </div>
