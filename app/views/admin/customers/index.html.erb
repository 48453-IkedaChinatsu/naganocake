<div class="container">
    
    <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h4>会員一覧</h4>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.last_name %><%= customer.first_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_customer_status == true %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
                <%= paginate @customers %>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>